algoritmo "creuza01"
// Função : descobrir a idade
// Autor :
// Data : 18/11/2021
// Seção de Declarações 
var
   anoAtual, anoNasc, idade: Inteiro

inicio
// Seção de Comandos 
   Escreva("Em que ano nós estamos? ")
   Leia(anoAtual)
   Escreva("Em que ano você nasceu? ")
   Leia(anoNasc)

idade <- anoAtual - anoNasc

Escreva("Sua idade é", idade, " anos!")

fimalgoritmo
